				  			<ColumnDefinition Width="Auto"/>
				  			<ColumnDefinition />
			  			</Grid.ColumnDefinitions>

		    			<controls:CheckBoxExtended VerticalOptions="CenterAndExpand"/>
		    			<Label Text="{Binding FullName}" Grid.Column="1" VerticalOptions="CenterAndExpand"/>
		    		</Grid>
		  		</ViewCell>-->
		  		</DataTemplate>
		  		</ListView.ItemTemplate>
		    </ListView>

		    <ActivityIndicator IsRunning="true" x:Name="busyIndicator" VerticalOptions="Center" HorizontalOptions="Center" IsVisible="false" />
	    </Grid>
    </Grid>
</ContentPage>
