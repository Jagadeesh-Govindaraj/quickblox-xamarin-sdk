	     <Grid.RowDefinitions>
		     <RowDefinition Height="Auto"/>
		     <RowDefinition Height="*"/>
	     </Grid.RowDefinitions>
	     <StackLayout Padding="18">
	     	<Label Text="Select Users you want to chat with:" FontSize="18"/>
	     </StackLayout>

        <Grid Grid.Row="1">
		    <ListView x:Name="listView" VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand" >
