<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinForms.QbChat.Pages.ChatsPage">
     <Grid>
	     <Grid.RowDefinitions>
		     <RowDefinition Height="Auto"/>
		     <RowDefinition Height="*"/>
	     </Grid.RowDefinitions>
	     <StackLayout Padding="18">
	     	<Label Text="Select a dialog to chat" FontSize="18"/>
	     </StackLayout>

        <Grid Grid.Row="1">
		    <ListView x:Name="listView" VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand"/>

		    <ActivityIndicator IsRunning="true" x:Name="busyIndicator" VerticalOptions="Center" HorizontalOptions="Center" IsVisible="false" />
	    </Grid>
    </Grid>
</ContentPage>